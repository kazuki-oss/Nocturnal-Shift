{% extends 'admin/layout.html.twig' %}

{% block title %}{{ isEdit ? 'ロール編集' : 'ロール作成' }}{% endblock %}

{% block admin_content %}
<div class="page-header">
    <h2 class="page-title">{{ isEdit ? 'ロール編集' : 'ロール作成' }}</h2>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
{% endfor %}

<div class="card">
    {{ form_start(form, {'attr': {'class': 'employee-form'}}) }}
    
    <div class="form-section">
        <h3 class="form-section-title">基本情報</h3>
        
        <div class="form-row">
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                {{ form_label(form.identifier) }}
                {{ form_widget(form.identifier, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.identifier) }}
                <small class="form-help">例: ROLE_ADMIN, ROLE_EMPLOYEE</small>
            </div>
        </div>
    </div>

    {{ form_rest(form) }}

    <div class="form-actions">
        <a href="{{ path('admin_roles_index') }}" class="btn btn-secondary">
            <i class="mdi mdi-close"></i> キャンセル
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="mdi mdi-content-save"></i> 保存
        </button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}

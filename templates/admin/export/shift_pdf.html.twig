{% extends 'admin/layout.html.twig' %}

{% block title %}シフト表 PDF{% endblock %}

{% block admin_content %}
<h1>シフト表 ({{ month|date('Y年m月') }})</h1>
<table style="width:100%; border-collapse: collapse;">
    <thead>
        <tr style="background:#f5f5f5;">
            <th style="border:1px solid #ddd; padding:8px;">従業員</th>
            <th style="border:1px solid #ddd; padding:8px;">日付</th>
            <th style="border:1px solid #ddd; padding:8px;">開始時刻</th>
            <th style="border:1px solid #ddd; padding:8px;">終了時刻</th>
        </tr>
    </thead>
    <tbody>
    {% for shift in shifts %}
        <tr>
            <td style="border:1px solid #ddd; padding:8px;">{{ shift.user.name }}</td>
            <td style="border:1px solid #ddd; padding:8px;">{{ shift.startTime|date('Y-m-d') }}</td>
            <td style="border:1px solid #ddd; padding:8px;">{{ shift.startTime|date('H:i') }}</td>
            <td style="border:1px solid #ddd; padding:8px;">{{ shift.endTime|date('H:i') }}</td>
        </tr>
    {% else %}
        <tr><td colspan="4" style="border:1px solid #ddd; padding:8px; text-align:center;">データがありません</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

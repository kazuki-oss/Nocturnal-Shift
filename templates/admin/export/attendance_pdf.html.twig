{% extends 'admin/layout.html.twig' %}

{% block title %}勤怠レポート PDF{% endblock %}

{% block admin_content %}
<h1>勤怠レポート ({{ from|date('Y-m-d') }} ～ {{ to|date('Y-m-d') }})</h1>
<table style="width:100%; border-collapse: collapse;">
    <thead>
        <tr style="background:#f5f5f5;">
            <th style="border:1px solid #ddd; padding:8px;">従業員</th>
            <th style="border:1px solid #ddd; padding:8px;">日付</th>
            <th style="border:1px solid #ddd; padding:8px;">出勤</th>
            <th style="border:1px solid #ddd; padding:8px;">退勤</th>
        </tr>
    </thead>
    <tbody>
    {% for attendance in records %}
        <tr>
            <td style="border:1px solid #ddd; padding:8px;">{{ attendance.user.name }}</td>
            <td style="border:1px solid #ddd; padding:8px;">{{ attendance.date|date('Y-m-d') }}</td>
            <td style="border:1px solid #ddd; padding:8px;">{{ attendance.clockIn ? attendance.clockIn|date('H:i') : '' }}</td>
            <td style="border:1px solid #ddd; padding:8px;">{{ attendance.clockOut ? attendance.clockOut|date('H:i') : '' }}</td>
        </tr>
    {% else %}
        <tr><td colspan="4" style="border:1px solid #ddd; padding:8px; text-align:center;">データがありません</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

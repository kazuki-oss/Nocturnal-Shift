{% extends 'admin/layout.html.twig' %}

{% block title %}従業員管理{% endblock %}

{% block admin_content %}
<div class="page-header">
    <h2 class="page-title">従業員管理</h2>
    <a href="{{ path('admin_employees_new') }}" class="btn btn-primary">
        <i class="mdi mdi-plus"></i> 新規作成
    </a>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
{% endfor %}

<div class="card">
    <div class="card-header">
        <form method="get" class="search-form">
            <input type="text" name="search" value="{{ search }}" placeholder="氏名またはメールアドレスで検索" class="form-control search-input">
            <button type="submit" class="btn btn-secondary">
                <i class="mdi mdi-magnify"></i> 検索
            </button>
        </form>
    </div>

    <table class="data-table">
        <thead>
            <tr>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ロール</th>
                <th>アクション</th>
            </tr>
        </thead>
        <tbody>
            {% for employee in employees %}
            <tr>
                <td>{{ employee.name }}</td>
                <td>{{ employee.email }}</td>
                <td>
                    {% for role in employee.userRoles %}
                        <span class="badge">{{ role.name }}</span>
                    {% endfor %}
                </td>
                <td class="actions">
                    <a href="{{ path('admin_employees_edit', {id: employee.id}) }}" class="btn-icon" title="編集">
                        <i class="mdi mdi-pencil"></i>
                    </a>
                    <form method="post" action="{{ path('admin_employees_delete', {id: employee.id}) }}" style="display: inline;" onsubmit="return confirm('本当に削除しますか？');">
                        <button type="submit" class="btn-icon btn-danger" title="削除">
                            <i class="mdi mdi-delete"></i>
                        </button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4" class="text-center text-muted">従業員が見つかりませんでした。</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

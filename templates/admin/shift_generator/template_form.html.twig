{% extends 'admin/layout.html.twig' %}

{% block title %}{{ template ? 'テンプレート編集' : 'テンプレート作成' }}{% endblock %}

{% block admin_content %}
<div class="page-header">
    <h2 class="page-title">{{ template ? 'テンプレート編集' : 'テンプレート作成' }}</h2>
    <div class="header-actions">
        <a href="{{ path('admin_shift_generator_index') }}" class="btn btn-secondary">
            <i class="mdi mdi-arrow-left"></i> 戻る
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        {{ form_start(form) }}
            <div class="form-group mb-3">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        {{ form_label(form.startTime) }}
                        {{ form_widget(form.startTime) }}
                        {{ form_errors(form.startTime) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        {{ form_label(form.endTime) }}
                        {{ form_widget(form.endTime) }}
                        {{ form_errors(form.endTime) }}
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.applicableDays) }}
                <div class="days-checkbox-group">
                    {{ form_widget(form.applicableDays) }}
                </div>
                {{ form_errors(form.applicableDays) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.requiredStaffCount) }}
                {{ form_widget(form.requiredStaffCount) }}
                {{ form_errors(form.requiredStaffCount) }}
            </div>

            <div class="form-actions mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="mdi mdi-content-save"></i> 保存
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<style>
.days-checkbox-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    padding: 0.5rem;
    border: 1px solid #ddd;
    border-radius: 4px;
}
.days-checkbox-group > div {
    display: flex;
    align-items: center;
    gap: 0.25rem;
}
</style>
{% endblock %}
